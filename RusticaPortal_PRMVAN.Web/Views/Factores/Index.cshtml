            left: 260px;
            z-index: 3;
            background: var(--bs-table-bg, #fff);
        }

        .sticky-col-end {
            position: sticky;
            right: 0;
            z-index: 3;
            background: var(--bs-table-bg, #fff);
        }
        /* Ajusta left de start-2 / start-3 si cambian anchos */
        th.sticky-col-start, td.sticky-col-start {
            min-width: 140px;
        }

        th.sticky-col-start-2, td.sticky-col-start-2 {
            min-width: 120px;
        }

