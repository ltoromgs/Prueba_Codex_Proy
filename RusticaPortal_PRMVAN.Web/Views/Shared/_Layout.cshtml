@using RusticaPortal_PRMVAN.Web.Models
<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>AdminLTE 4 | Theme Customize</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" content="AdminLTE 4 | Theme Customize" />
    <meta name="author" content="ColorlibHQ" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/@@fontsource/source-sans-3@5.0.12/index.css"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.10.1/styles/overlayscrollbars.min.css"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
          crossorigin="anonymous" />
    <link href="~/css/adminlte.css?v=1.4" rel="stylesheet" />

    <!-- ====== Estilos para el treeview (mostrar/ocultar y flecha) ====== -->
    <style>
        /* Oculta hijos por defecto; se muestran cuando el padre tiene .menu-open */
        .nav-sidebar .nav-item .nav-treeview {
            display: none;
        }

        .nav-sidebar .nav-item.menu-open > .nav-treeview {
            display: block;
        }

        /* Animación de la flecha */
        .nav-sidebar .nav-link .right {
            transition: transform .2s;
        }

        .nav-sidebar .nav-item.menu-open > .nav-link .right {
            transform: rotate(90deg);
        }

        /* Mejora de contraste para los nombres del menú */
        .app-sidebar .nav-link,
        .app-sidebar .nav-link p,
        .app-sidebar .nav-link .nav-icon,
        .app-sidebar .nav-treeview .nav-link {
            color: #fff !important;
        }
    </style>
</head>

@{
    Layout = null;

    var rawPath = Context.Request.Path.Value ?? "";
    var currentPath = rawPath.TrimEnd('/').ToLowerInvariant();

    var menuModel = ViewBag.MenuModel as MenuModel
                    ?? new MenuModel { Menu = new List<MenuItem>() };

    var nombreCompleto = User.FindFirst("NombreCompleto")?.Value;
    var nombrePerfil = User.FindFirst("NombrePerfil")?.Value;
    var UsuarioID = "RUC - " + User.FindFirst("UsuarioID")?.Value;
    var popupBase64 = ViewBag.PopupImage as string;
}

@if (!string.IsNullOrEmpty(popupBase64))
{
    <div class="modal fade" id="popupBienvenida" tabindex="-1" aria-labelledby="popupBienvenidaLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img src="@popupBase64" class="img-fluid rounded mb-3" alt="Bienvenida" />
                    <h5>¡Bienvenido, <strong>@nombreCompleto</strong>!</h5>
                    <button type="button" class="btn btn-primary mt-3" data-bs-dismiss="modal" autofocus>Continuar</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const popup = new bootstrap.Modal(document.getElementById('popupBienvenida'));
            popup.show();
        });
    </script>
}

<body class="sidebar-expand-lg bg-body-tertiary">
    <div class="app-wrapper">
        <!-- Header -->
        <nav class="app-header navbar navbar-expand bg-body">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                            <i class="bi bi-list"></i>
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-lte-toggle="fullscreen">
                            <i data-lte-icon="maximize" class="bi bi-arrows-fullscreen"></i>
                            <i data-lte-icon="minimize" class="bi bi-fullscreen-exit" style="display:none"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown user-menu">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img src="~/img/user2-160x160.jpg" class="user-image rounded-circle shadow" alt="User Image" />
                            <span class="d-none d-md-inline">@nombreCompleto</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
                            <li class="user-header text-bg-primary">
                                <img src="~/img/user2-160x160.jpg" class="rounded-circle shadow" alt="User Image" />
                                <p>Perfil: @nombrePerfil <br /> Usuario: @UsuarioID</p>
                            </li>
                            <li class="user-footer">
                                <a href="/Account/Logout" class="btn btn-default btn-flat float-end">Salir</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Sidebar -->
        <aside class="app-sidebar bg-primary-subtle" data-bs-theme="dark">
            <div class="sidebar-brand">
                <a href="#" class="brand-link">
                    <img src="~/img/Logo.jpg" alt="Logo" class="brand-image shadow" />
                </a>
            </div>

            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <!-- OJO: clases estándar de AdminLTE 4 para treeview -->
                    <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu" data-accordion="false">
                        @foreach (var item in menuModel.Menu)
                        {
                            var hasChildren = item.Hijos?.Any() == true;

                            // ruta actual normalizada
                            var anyChildActive = hasChildren && item.Hijos.Any(sub =>
                            ((sub.Ruta ?? "").TrimEnd('/').ToLowerInvariant()) == currentPath);

                            <li class="nav-item @(hasChildren ? "has-treeview" : "") @(anyChildActive ? "menu-open" : "")">
                                @if (hasChildren)
                                {
                                    <a href="#" class="nav-link" data-lte-toggle="treeview"
                                       aria-expanded="@(anyChildActive.ToString().ToLower())">
                                        <i class="nav-icon bi bi-circle-fill"></i>
                                        <p>
                                            @item.Nombre
                                            <i class="right bi bi-chevron-right nav-arrow"></i>
                                        </p>
                                    </a>

                                    <ul class="nav nav-treeview">
                                        @foreach (var sub in item.Hijos)
                                        {
                                            var subPath = (sub.Ruta ?? "").TrimEnd('/').ToLowerInvariant();
                                            var isActive = !string.IsNullOrEmpty(sub.Ruta) && subPath == currentPath;

                                            <li class="nav-item">
                                                <a href="@sub.Ruta" class="nav-link @(isActive ? "active" : "")">
                                                    <i class="nav-icon bi bi-circle"></i>
                                                    <p>@sub.Nombre</p>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <a href="@item.Ruta" class="nav-link @(anyChildActive ? "active" : "")">
                                        <i class="nav-icon bi bi-circle-fill"></i>
                                        <p>@item.Nombre</p>
                                    </a>
                                }
                            </li>
                        }
                        <li class="nav-item mt-3">
                            <a class="nav-link text-danger" href="/Account/Logout">
                                <i class="nav-icon bi bi-box-arrow-right"></i>
                                <p>Salir</p>
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
        </aside>

        <!-- Main -->
        <main class="app-main">
            @RenderBody()
        </main>

        <footer class="app-footer">
            <div class="float-end d-none d-sm-inline">Anything you want</div>
            <strong>
                Copyrights © 2019 Todos los derechos reservados.
                Desarrollado por <a href="https://arellano.pe" class="text-decoration-none">ARELLANO</a>.
            </strong> All rights reserved.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.10.1/browser/overlayscrollbars.browser.es6.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="~/js/adminlte.js?v=1.4"></script>

    <script>
        // Inicializa OverlayScrollbars en el contenedor del sidebar (opcional)
        const SELECTOR_SIDEBAR_WRAPPER = '.sidebar-wrapper';
        document.addEventListener('DOMContentLoaded', function () {
            const wrap = document.querySelector(SELECTOR_SIDEBAR_WRAPPER);
            if (wrap && OverlayScrollbarsGlobal?.OverlayScrollbars !== undefined) {
                OverlayScrollbarsGlobal.OverlayScrollbars(wrap, {
                    scrollbars: { theme: 'os-theme-light', autoHide: 'leave', clickScroll: true }
                });
            }
        });

        // ====== Fallback por si el plugin de AdminLTE no engancha el treeview ======
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('#sidebarTree [data-lte-toggle="treeview"]').forEach(function (link) {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const li = this.closest('.nav-item');
                    if (!li) return;

                    li.classList.toggle('menu-open');
                    const expanded = li.classList.contains('menu-open');
                    this.setAttribute('aria-expanded', expanded ? 'true' : 'false');
                });
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
